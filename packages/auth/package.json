{
  "name": "@congress/auth",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./beneficiary": {
      "types": "./dist/beneficiary.d.ts",
      "default": "./src/beneficiary.ts"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "default": "./src/middleware.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./env": {
      "types": "./dist/env.d.ts",
      "default": "./env.ts"
    }
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "generate": "dotenv -e ../../.env -- pnpx @better-auth/cli generate --config script/auth-cli.ts --output ../db/src/auth-schema.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@congress/db": "workspace:*",
    "@t3-oss/env-core": "^0.13.8",
    "bcryptjs": "^3.0.3",
    "better-auth": "catalog:",
    "jose": "^6.1.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@better-auth/cli": "catalog:",
    "@congress/eslint-config": "workspace:*",
    "@congress/prettier-config": "workspace:*",
    "@congress/tsconfig": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@congress/prettier-config"
}
