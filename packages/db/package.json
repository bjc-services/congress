{
  "name": "@congress/db",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./src/schema/index.ts"
    },
    "./transaction": {
      "types": "./dist/transaction.d.ts",
      "default": "./src/transaction.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "push": "bun with-env drizzle-kit push",
    "studio": "bun with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@congress/validators": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "postgres": "^3.4.7",
    "ulidx": "^2.4.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@congress/eslint-config": "workspace:*",
    "@congress/prettier-config": "workspace:*",
    "@congress/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.31.5",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@congress/prettier-config"
}
