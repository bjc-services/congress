{
  "name": "create-t3-turbo",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "^22.21.0"
  },
  "packageManager": "bun@1.3.2",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "bun -F @congress/auth generate",
    "db:push": "turbo -F @congress/db push",
    "db:studio": "turbo -F @congress/db studio",
    "db:legacy:push": "turbo -F @congress/legacy-db push",
    "db:legacy:studio": "turbo -F @congress/legacy-db studio",
    "dev": "turbo watch dev dev:i18n --continue",
    "dev:i18n": "concurrently \"i18next-cli extract --watch\" \"i18next-cli types --watch\"",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "bun x sherif@latest",
    "postinstall": "bun lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "update:license": "bun scripts/update-license-year.ts"
  },
  "devDependencies": {
    "@congress/prettier-config": "workspace:*",
    "@turbo/gen": "^2.6.0",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^10.0.0",
    "i18next-cli": "1.22.0",
    "prettier": "catalog:",
    "turbo": "^2.6.0",
    "typescript": "catalog:"
  },
  "prettier": "@congress/prettier-config",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "@better-auth/cli": "1.4.0-beta.18",
      "@better-upload/client": "3.0.0",
      "@eslint/js": "^9.38.0",
      "@tailwindcss/postcss": "^4.1.16",
      "@tailwindcss/vite": "^4.1.16",
      "@tanstack/react-form": "^1.23.8",
      "@tanstack/react-query": "^5.90.5",
      "@orpc/client": "^1.12.0",
      "@orpc/server": "^1.12.0",
      "@orpc/tanstack-query": "^1.12.0",
      "@types/node": "22.18.12",
      "@vitejs/plugin-react": "5.1.0",
      "better-auth": "1.4.0-beta.18",
      "eslint": "^9.38.0",
      "i18next": "25.6.0",
      "i18next-browser-languagedetector": "8.2.0",
      "prettier": "^3.6.2",
      "radix-ui": "^1.4.3",
      "react-i18next": "16.2.4",
      "tailwindcss": "^4.1.16",
      "typescript": "^5.9.3",
      "vite": "7.1.12",
      "zod": "4.1.12",
      "superjson": "^2.2.5"
    },
    "catalogs": {
      "react19": {
        "@types/react": "^19.1.12",
        "@types/react-dom": "^19.1.9",
        "react": "19.1.1",
        "react-dom": "19.1.1"
      }
    }
  },
  "overrides": {
    "@types/minimatch": "5.1.2",
    "vite": "7.1.12"
  }
}
